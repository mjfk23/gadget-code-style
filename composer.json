{
  "name": "mjfk23/gadget-code-style",
  "description": "",
  "type": "library",
  "keywords": [],
  "homepage": "https://github.com/mjfk23/gadget-code-style",
  "license": "MIT",
  "authors": [
    {
      "name": "Melody Kimball",
      "role": "lead"
    }
  ],
  "support": {
    "issues": "https://github.com/mjfk23/gadget-code-style/issues",
    "wiki": "https://github.com/mjfk23/gadget-code-style/wiki",
    "source": "https://github.com/mjfk23/gadget-code-style"
  },
  "require": {
    "php": "^8.1",
    "phpstan/phpstan": "^2.0",
    "phpstan/phpstan-strict-rules": "^2.0",
    "phpstan/extension-installer": "^1.4",
    "squizlabs/php_codesniffer": "^3.10"
  },
  "autoload": {
    "psr-4": {
      "Gadget\\CodeStyle\\": "src/"
    }
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    },
    "sort-packages": true,
    "optimize-autoloader": true,
    "apcu-autoloader": true
  },
  "scripts": {
    "phpcs": "vendor/bin/phpcs",
    "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon"
  }
}
